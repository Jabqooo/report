<div class="tracy-inner" style="max-width: 900px;">
    <table>
        <tr>
            <th>Report</th>
            <th>Subreport</th>
            <th>DataSource</th>
            <th>Renderer</th>
            <th>Tags</th>
        </tr>
        <?php foreach ($items as $item) { ?>
