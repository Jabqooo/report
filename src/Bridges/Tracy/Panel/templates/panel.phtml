                        <div class="tracy-collapsed" id="<?= $item->id ?>d"><?= Dumper::toHtml($item->datasource->service, [Dumper::COLLAPSE => TRUE, Dumper::LIVE => FALSE]); ?></div>
                    <?php else: ?>
                        <code title="<?= htmlSpecialChars($item->datasource->type) ?>"><?=$item->datasource->name?></code>
                    <?php endif ?>
                </td>
                <td>
                    <?php if ($item->renderer->created === TRUE): ?>
                        <a rel="#<?= $item->id ?>r" class="tracy-toggle tracy-collapsed"><?=$item->renderer->name?></a>
                        <div class="tracy-collapsed" id="<?= $item->id ?>r"><?= Dumper::toHtml($item->renderer->service, [Dumper::COLLAPSE => TRUE, Dumper::LIVE => FALSE]); ?></div>
