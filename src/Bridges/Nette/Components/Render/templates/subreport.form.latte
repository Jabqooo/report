{block}
<form n:name="parametersForm">
    <!-- INPUTS -->
    {foreach $form->getControls() as $item}
        {if $item instanceof Nette\Forms\Controls\TextInput}
            {include #input, _form => $form, control => $item}
        {elseif $item instanceof Nette\Forms\Controls\SelectBox}
            {include #select, _form => $form, control => $item}
        {/if}
    {/foreach}

    <!-- BUTTONS -->
    <input n:name="send" class="btn btn-primary">
    <input n:name="reset" class="btn btn-danger">
</form>
{/block}

{define #input}
    <div class="form-group">
        <label n:name="$control->name">{$control->caption}</label>
        <input class="form-control" n:name="$control->name">
    </div>
{/define}

{define #select}
    <div class="form-group">
        <label n:name="$control->name">{$control->caption}</label>
        <select class="form-control" n:name="$control->name"></select>
    </div>
{/define}
